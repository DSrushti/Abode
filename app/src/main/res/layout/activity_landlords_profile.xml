<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".LandlordsProfile"
    android:background="@drawable/list_back">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/setting_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/Address"
        android:layout_marginTop="35dp"
        android:src="@drawable/default_profile"
        android:layout_alignLeft="@+id/Address" />


    <TextView
        android:id="@+id/Address"
        android:layout_width="289dp"
        android:layout_height="42dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="72dp"
        android:layout_marginTop="256dp"
        android:layout_weight="1"
        android:text="TextView"
        android:layout_marginRight="72dp"
        android:layout_alignParentRight="true"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/user_single_name"
        android:layout_width="223dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/Address"
        android:layout_marginTop="152dp"
        android:text="Display Name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignLeft="@+id/Address"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/Phone"
        android:layout_width="361dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="190dp"
        android:text="TextView"
        android:layout_alignParentRight="true"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/Rent"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/Address"
        android:layout_marginTop="221dp"
        android:text="TextView"
        android:layout_alignLeft="@+id/Address"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/Location"
        android:layout_width="73dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="11dp"
        android:layout_marginEnd="39dp"
        android:background="@drawable/button_back"
        android:text="ON MAP"
        android:layout_alignParentRight="true"
        android:layout_marginRight="39dp" />

    <ListView
        android:id="@+id/lv1"
        android:layout_width="352dp"
        android:layout_height="135dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="76dp" />

    <Button
        android:id="@+id/View_Images"
        android:layout_width="73dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="11dp"
        android:layout_marginStart="36dp"
        android:background="@drawable/button_back"
        android:text="Images"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="36dp" />

    <TextView
        android:id="@+id/Type"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/Rent"
        android:layout_marginEnd="56dp"
        android:layout_marginRight="56dp"
        android:text="Type"
        android:textColor="#ffffff" />



    <ImageView
        android:id="@+id/img3"
        android:layout_width="40dp"
        android:layout_height="38dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-56dp"
        android:layout_marginTop="42dp"
        android:layout_toEndOf="@+id/Type"
        android:background="@drawable/fav"
        android:layout_marginLeft="-56dp"
        android:layout_toRightOf="@+id/Type" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lv1"
        android:layout_alignStart="@+id/setting_image"
        android:text="Requirements : "
        android:textColor="@color/white"
        android:layout_alignLeft="@+id/setting_image" />

    <Button
        android:id="@+id/chat"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/Location"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_back"
        android:text="Message"/>

</RelativeLayout>